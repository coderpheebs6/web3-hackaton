---
import Markdown from "../../layouts/Markdown.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const allFoundations = await getCollection('foundations');
  return allFoundations.map((foundation) => ({
    params: { slug: foundation.id },
    props: { foundation },
  }));
}

type Props = {
  foundation: CollectionEntry<'foundations'>;
}

const { foundation } = Astro.props;
---

<Markdown>
  <a href="/#foundations">Foundations</a>
  <h2><span>{foundation.data.title}</span></h2>
  <article set:html={foundation.body} />
</Markdown>

<style>
  a {
    display: block;
    margin-bottom: var(--sp-m);
  }
</style>