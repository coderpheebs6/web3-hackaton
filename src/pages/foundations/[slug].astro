---
import { getCollection, render } from "astro:content";
import Markdown from "../../layouts/Markdown.astro";

export async function getStaticPaths() {
  const allFoundations = await getCollection("foundations");
  return allFoundations.map((foundation) => ({
    params: { slug: foundation.id },
    props: { foundation },
  }));
}

const { foundation } = Astro.props;
const { Content } = await render(foundation);
---

<Markdown>
  <a href="/web3-hackaton/#foundations">Foundations</a>
  <h2><span>{foundation.data.title}</span></h2>
  <Content />
</Markdown>

<style>
  a {
    display: block;
    margin-bottom: var(--sp-m);
  }
</style>
